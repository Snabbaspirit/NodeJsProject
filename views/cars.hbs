<h1>Cars</h1>

{{#if cars.length}}
{{#each cars}}
<div class="row">
    <div class="col s6 offset-s3">
      <div class="card">
        <div class="card-image">
          <img src="{{img}}" alt="{{model}}">
        </div>
        <div class="card-content">
          <span class="card-title">{{model}}</span>
          <p class="price">{{price}}</p>
        </div>
        <div class="card-action">
          <a href="/cars/{{id}}" target="_blank">Show car</a>
          <a href="/cars/{{id}}/edit?allow=true">Edit</a>
        </div>
      </div>
    </div>
  </div>
{{/each}}
{{else}}
<p>No cars yet</p>
{{/if}}