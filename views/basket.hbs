<h1>Shop basket</h1>

<div id="basket">
  {{#if cars.length}}
    <table>
      <thead>
        <tr>
          <th>Model</th>
          <th>Count</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>

        {{#each cars}}
        <tr>
          <td>{{model}}</td>
          <td>{{count}}</td>
          <td>
            <button class="btn btn-small js-remove" data-id="{{id}}">Delete</button>
          </td>
        </tr>
        {{/each}}

      </tbody>
    </table>

    <p><strong>Price:</strong><span class="price">{{price}}</span></p>
  {{else}}
    <p>Basket is empty</p>
  {{/if}}
</div>